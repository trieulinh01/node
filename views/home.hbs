 <section id="products">
        <h3 class="title ">ToCoToCo Menu</h3>
        <h1 class="title ">SẢN PHẨM NỔI BẬT</h1>
        <div class="products-title-img ">
            <img src="/images/card_title.webp" class="img-title w-[60%] mx-auto text-center" alt="" />
        </div>
        <div class="cardList ">
          {{#each products}}
            <div class="cardItem ">
                <div class="cardItem-new">new</div>
                <div class="cardItem-img">
                    <a href="/products"><img src="{{this.images.[0]}}" alt="{{this.name}}" /></a>
                </div>
                <div class="cardItem-discount">0%</div>
                <div class="cardItem-info">
                    <a href="/products"><h3>{{this.name}}</h3></a>
                    <p>{{this.sale_price}}đ<span>{{this.price}}</span></p>
                    <div class="btn-order">ĐẶT HÀNG</div>
                </div>
            </div>
        {{/each}}
          
        
            
