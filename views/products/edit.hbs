<div class="mt-4">
    <h5 class="text-center font-bold uppercase text-2xl">Update Product</h5>
    <form method="POST" action="/products/{{products._id}}?_method=PUT" class="mt-4 w-[70%] mx-auto mb-10">
        <div class="form-group">
            <label for="name">Product Name</label>
            <input type="text" class="form-control" value="{{products.productName}}" id="productName" name="productName">
        </div>
         <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" value="{{products.description}}" id="description" name="description"></textarea>
        </div>
       
        <div class="form-group">
            <label for="image">Sale Price</label>
            <input type="text" class="form-control" value="{{products.sale_price}}" id="sale_price" name="sale_price">
        </div>
        <div class="form-group">
            <label for="level">Price</label>
            <input type="number" class="form-control" value="{{products.price}}" id="price" name="price">
        </div>

        <button type="submit" class="btn btn-primary bg-blue-500">Update Product</button>
    </form>
</div>